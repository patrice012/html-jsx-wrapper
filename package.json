{
  "name": "html-jsx-wrapper",
  "displayName": "HTML JSX Wrapper",
  "publisher": "Patrice",
  "description": "Encapsulate selected code with HTML/JSX tags.",
  "repository": {
    "url": "https://github.com/patrice012/html-jsx-wrapper"
  },
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.95.3"
  },
  "icon": "assets/icon.png",
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:html",
    "onLanguage:javascriptreact"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "extension.embedWithTag",
        "title": "Embed Code with Tag"
      },
      {
        "command": "extension.addAttributes",
        "title": "Add attributes"
      },
      {
        "command": "extension.wrapWithTag",
        "title": "Tag wrapper"
      }
    ],
    "keybindings": [
      {
        "command": "extension.embedWithTag",
        "key": "ctrl+shift+e",
        "when": "editorTextFocus"
      },
      {
        "command": "extension.addAttributes",
        "key": "ctrl+shift+f",
        "when": "editorTextFocus"
      },
      {
        "command": "extension.wrapWithTag",
        "key": "ctrl+shift+i",
        "when": "editorTextFocus"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "extension.embedWithTag",
          "when": "editorHasSelection",
          "group": "1_modification"
        },
        {
          "command": "extension.addAttributes",
          "when": "editorHasSelection",
          "group": "1_modification"
        },
        {
          "command": "extension.wrapWithTag",
          "when": "editorHasSelection",
          "group": "1_modification"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "pnpm run package",
    "compile": "pnpm run check-types && pnpm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "pnpm run check-types && pnpm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "pnpm run compile-tests && pnpm run compile && pnpm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/vscode": "^1.95.0",
    "@typescript-eslint/eslint-plugin": "^8.17.0",
    "@typescript-eslint/parser": "^8.17.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "esbuild": "^0.24.0",
    "eslint": "^9.16.0",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.7.2"
  },
  "dependencies": {
    "htmlparser2": "^9.1.0"
  }
}
